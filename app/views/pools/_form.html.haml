= form_for @pool do |f|
  - if @pool.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pool.errors.count, "error")} prohibited this pool from being saved:"
      %ul
        - @pool.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
